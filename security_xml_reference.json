      "purpose_es": "Lista Negra de Aplicaciones - Contiene hashes de aplicaciones bloqueadas",
      "structure": {
        "root": "LIST",
        "version_attribute": "VERSION",
        "main_elements": ["HASHVALUE", "HASH"]
      },
      "valid_options": {
        "VERSION": {
          "format": "YYYYMMDD",
          "example": "20240926"
        },
        "HASHVALUE_name": {
          "format": "SHA256 hash",
          "length": 64
        },
        "HASH_value": {
          "type": "string",
          "options": ["ALL", "SHA256 hash"],
          "ALL_meaning": "Block all versions",
          "hash_meaning": "Block specific signature"
        }
      },
      "modifications_allowed": true,
      "requires_root": true,
      "knox_impact": "medium"
    },
