{
  "security_xml_files": {
    "ADP.xml": {
      "location": "/system/etc/ADP.xml",
      "purpose": "Application Data Protection - Validates application integrity using SHA256 hashes",
      "purpose_es": "Protección de Datos de Aplicaciones - Valida la integridad de aplicaciones usando hashes SHA256",
      "structure": {
        "root": "ADP",
        "version_attribute": "VERSION",
        "main_elements": ["HASHVALUE", "pattern", "hashCode", "versionType", "format"]
      },
      "valid_options": {
        "VERSION": {
          "format": "YYYYMMDD",
          "example": "20250902"
        },
        "ADP_version": {
          "format": "X.Y",
          "example": "3.1"
        },
        "HASHVALUE_name": {
          "format": "SHA256 hash",
          "length": 64,
          "example": "1b678c80fc9940d60d4ad7b3dd41ef886e196bb633c75611a5d94e1c63fab0bf"
        },
        "pattern_value": {
          "type": "regex",
          "examples": [
            "^\\d{9}\\z",
            "^\\d{10}\\z",
            "[0-9]+",
            "^\\d{4}00\\d{3}\\z"
          ]
        },
        "hashCode_value": {
          "type": "integer",
          "examples": [310200015, 302300000, 4, 33]
        },
        "versionType_value": {
          "type": "integer",
          "examples": [1, 2, 3, 5, 1703114115]
        },
        "format_value": {
          "type": "regex_capture",
          "example": "([0-9]+)",
          "optional": true
        }
      },
      "modifications_allowed": true,
      "requires_root": true,
      "knox_impact": "high"
    },
    "ASKSB.xml": {
      "location": "/system/etc/ASKSB.xml",
